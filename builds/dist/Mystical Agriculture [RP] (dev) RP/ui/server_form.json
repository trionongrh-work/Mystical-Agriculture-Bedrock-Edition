{
  "namespace": "server_form",
  "third_party_server_screen@common.base_screen": {
    "$screen_content": "server_form.main_screen_content",
    "button_mappings": [
      {
        "from_button_id": "button.menu_cancel",
        "to_button_id": "button.menu_exit",
        "mapping_type": "global"
      }
    ]
  },
  "main_screen_content": {
    "type": "panel",
    "size": [
      0,
      0
    ],
    "controls": [
      {
        "server_form_factory": {
          "type": "factory",
          "control_ids": {
            "long_form": "@server_form.long_form",
            "custom_form": "@server_form.custom_form"
          }
        }
      }
    ]
  },
  "long_form": {
    "type": "panel",
    "size": [
      "100%",
      "100%"
    ],
    "controls": [
      {
        "custom_long_form@common_dialogs.main_panel_no_buttons": {
          "$title_panel": "common_dialogs.standard_title_label",
          "$title_size": [
            "100% - 14px",
            10
          ],
          "size": [
            225,
            200
          ],
          "$text_name": "#title_text",
          "$title_text_binding_type": "none",
          "$child_control": "server_form.long_form_panel",
          "layer": 2,
          "bindings": [
            {
              "binding_name": "#title_text"
            },
            {
              "binding_type": "view",
              "source_property_name": "((#title_text - '§c§u§s§t§o§m') = #title_text)",
              "target_property_name": "#visible"
            }
          ]
        }
      },
      {
        "custom_long_form@common_dialogs.main_panel_no_buttons": {
          "$title_panel": "common_dialogs.standard_title_label",
          "$title_size": [
            "100% - 14px",
            10
          ],
          "size": [
            365,
            200
          ],
          "$text_name": "#title_text",
          "$title_text_binding_type": "none",
          "$child_control": "server_form.category_panel_main",
          "layer": 2,
          "bindings": [
            {
              "binding_name": "#title_text"
            },
            {
              "binding_type": "view",
              "source_property_name": "(not ((#title_text - '§c§u§s§t§o§m') = #title_text))",
              "target_property_name": "#visible"
            }
          ]
        }
      }
    ]
  },
  "category_panel_main": {
    "type": "stack_panel",
    "size": [
      "100%",
      "100%"
    ],
    "orientation": "horizontal",
    "layer": 1,
    "anchor_from": "top_left",
    "anchor_to": "top_left",
    "controls": [
      {
        "scrolling_panel@common.scrolling_panel": {
          "anchor_to": "top_left",
          "anchor_from": "top_left",
          "$show_background": false,
          "size": [
            "30%",
            "100%"
          ],
          "$scrolling_content": "server_form.category_scrolling_content",
          "$scroll_size": [
            5,
            "100% - 4px"
          ],
          "$scrolling_pane_size": [
            "100% - 4px",
            "100% - 2px"
          ],
          "$scrolling_pane_offset": [
            2,
            0
          ],
          "$scroll_bar_right_padding_size": [
            0,
            0
          ]
        }
      },
      {
        "dialog_divider@common.dialog_divider": {
          "size": [
            "2%",
            "100%"
          ]
        }
      },
      {
        "scrolling_panel@common.scrolling_panel": {
          "anchor_to": "top_left",
          "anchor_from": "top_left",
          "$show_background": false,
          "size": [
            "68%",
            "100%"
          ],
          "$scrolling_content": "server_form.items_scrolling_content",
          "$scroll_size": [
            5,
            "100% - 4px"
          ],
          "$scrolling_pane_size": [
            "100% - 4px",
            "100% - 2px"
          ],
          "$scrolling_pane_offset": [
            2,
            0
          ],
          "$scroll_bar_right_padding_size": [
            0,
            0
          ]
        }
      }
    ]
  },
  "category_scrolling_content": {
    "type": "stack_panel",
    "size": [
      "100% - 4px",
      "100%c + 4px"
    ],
    "orientation": "vertical",
    "anchor_from": "top_left",
    "anchor_to": "top_left",
    "controls": [
      {
        "label_offset_panel": {
          "visible": false,
          "type": "panel",
          "size": [
            "100%",
            "100%c"
          ],
          "controls": [
            {
              "main_label": {
                "type": "label",
                "offset": [
                  2,
                  2
                ],
                "color": "$main_header_text_color",
                "size": [
                  "100%",
                  "default"
                ],
                "anchor_from": "top_left",
                "anchor_to": "top_left",
                "text": "#form_text"
              }
            }
          ]
        }
      },
      {
        "padding": {
          "visible": false,
          "type": "panel",
          "size": [
            "100%",
            4
          ]
        }
      },
      {
        "wrapping_panel": {
          "type": "panel",
          "size": [
            "100%",
            "100%c"
          ],
          "controls": [
            {
              "category_buttons_panel@server_form.category_buttons_panel": {}
            }
          ]
        }
      }
    ]
  },
  "items_scrolling_content": {
    "type": "stack_panel",
    "size": [
      "100%",
      "100%c"
    ],
    "orientation": "vertical",
    "anchor_from": "top_left",
    "anchor_to": "top_left",
    "controls": [
      {
        "label_offset_panel": {
          "type": "panel",
          "size": [
            "100%",
            "100%c"
          ],
          "controls": [
            {
              "main_label": {
                "type": "label",
                "offset": [
                  2,
                  2
                ],
                "color": "$main_header_text_color",
                "size": [
                  "100%",
                  "default"
                ],
                "anchor_from": "top_left",
                "anchor_to": "top_left",
                "text": "#final_text",
                "bindings": [
                  {
                    "binding_name": "#form_text"
                  },
                  {
                    "binding_type": "view",
                    "source_property_name": "(('§f' + #form_text - ('%.12s' * ('§f' + #form_text))) - ']')",
                    "target_property_name": "#final_text"
                  }
                ]
              }
            }
          ]
        }
      },
      {
        "padding": {
          "type": "panel",
          "size": [
            "100%",
            4
          ]
        }
      },
      {
        "wrapping_panel": {
          "type": "panel",
          "size": [
            "100%",
            "100%c"
          ],
          "controls": [
            {
              "items_buttons_panel@server_form.items_buttons_panel": {}
            }
          ]
        }
      }
    ]
  },
  "category_buttons_panel": {
    "type": "stack_panel",
    "size": [
      "100% - 4px",
      "100%c"
    ],
    "offset": [
      2,
      0
    ],
    "orientation": "vertical",
    "anchor_from": "top_middle",
    "anchor_to": "top_middle",
    "factory": {
      "name": "buttons",
      "control_name": "server_form.category_button_main"
    },
    "collection_name": "form_buttons",
    "bindings": [
      {
        "binding_name": "#form_button_length",
        "binding_name_override": "#collection_length"
      }
    ]
  },
  "items_buttons_panel": {
    "type": "grid",
    "size": [
      "100%",
      "100%c"
    ],
    "grid_dimensions": [
      3,
      5
    ],
    "grid_item_template": "server_form.item_button",
    "grid_fill_direction": "horizontal",
    "grid_rescaling_type": "horizontal",
    "anchor_from": "top_left",
    "anchor_to": "top_left",
    "factory": {
      "name": "buttons",
      "control_name": "server_form.item_button"
    },
    "collection_name": "form_buttons",
    "bindings": [
      {
        "binding_name": "#form_text"
      },
      {
        "binding_type": "view",
        "source_property_name": "(1 * ('%.10s' * #form_text - ']'))",
        "target_property_name": "#len"
      },
      {
        "binding_name": "#form_button_length"
      },
      {
        "binding_type": "view",
        "source_property_name": "(#form_button_length - #len)",
        "target_property_name": "#maximum_grid_items"
      }
    ]
  },
  "category_button_main": {
    "type": "panel",
    "size": [
      "100%",
      40
    ],
    "controls": [
      {
        "category_button@server_form.category_button": {}
      }
    ],
    "bindings": [
      {
        "binding_name": "#form_button_text",
        "binding_type": "collection",
        "binding_collection_name": "form_buttons"
      },
      {
        "binding_type": "view",
        "source_property_name": "(not (#form_button_text - '§c§a§t§e§g§o§r§y' = #form_button_text))",
        "target_property_name": "#visible"
      }
    ]
  },
  "category_button": {
    "type": "stack_panel",
    "size": [
      "100%",
      32
    ],
    "offset": [
      0,
      5
    ],
    "orientation": "horizontal",
    "controls": [
      {
        "panel_name": {
          "type": "panel",
          "size": [
            34,
            "100%c"
          ],
          "bindings": [
            {
              "binding_name": "#form_button_texture",
              "binding_name_override": "#texture",
              "binding_type": "collection",
              "binding_collection_name": "form_buttons"
            },
            {
              "binding_type": "view",
              "source_property_name": "(not (#texture = ''))",
              "target_property_name": "#visible"
            }
          ],
          "controls": [
            {
              "image": {
                "type": "image",
                "layer": 2,
                "size": [
                  32,
                  32
                ],
                "offset": [
                  -2,
                  0
                ],
                "bindings": [
                  {
                    "binding_name": "#form_button_texture",
                    "binding_name_override": "#texture",
                    "binding_type": "collection",
                    "binding_collection_name": "form_buttons"
                  },
                  {
                    "binding_name": "#form_button_texture_file_system",
                    "binding_name_override": "#texture_file_system",
                    "binding_type": "collection",
                    "binding_collection_name": "form_buttons"
                  },
                  {
                    "binding_type": "view",
                    "source_property_name": "(not ((#texture = '') or (#texture = 'loading')))",
                    "target_property_name": "#visible"
                  }
                ]
              }
            },
            {
              "progress@progress.progress_loading_bars": {
                "size": [
                  30,
                  4
                ],
                "offset": [
                  -2,
                  16
                ],
                "visible": false,
                "bindings": [
                  {
                    "binding_type": "view",
                    "source_control_name": "image",
                    "resolve_sibling_scope": true,
                    "source_property_name": "(#texture = 'loading')",
                    "target_property_name": "#visible"
                  }
                ]
              }
            }
          ]
        }
      },
      {
        "form_button@common_buttons.light_text_button": {
          "$pressed_button_name": "button.form_button_click",
          "anchor_from": "top_left",
          "anchor_to": "top_left",
          "size": [
            "fill",
            32
          ],
          "$button_text": "#form_button_text",
          "$button_text_binding_type": "collection",
          "$button_text_grid_collection_name": "form_buttons",
          "$button_text_max_size": [
            "100%",
            20
          ],
          "bindings": [
            {
              "binding_type": "collection_details",
              "binding_collection_name": "form_buttons"
            }
          ]
        }
      }
    ],
    "bindings": [
      {
        "binding_name": "#form_button_text",
        "binding_type": "collection",
        "binding_collection_name": "form_buttons"
      },
      {
        "binding_type": "view",
        "source_property_name": "(not (#form_button_text - '§c§a§t§e§g§o§r§y' = #form_button_text))",
        "target_property_name": "#visible"
      }
    ]
  },
  "item_button": {
    "type": "panel",
    "size": [
      66,
      70
    ],
    "controls": [
      {
        "main_ui": {
          "type": "panel",
          "$default_button_texture": "textures/my_button",
          "size": [
            64,
            64
          ],
          "controls": [
            {
              "panel_name": {
                "type": "panel",
                "size": [
                  64,
                  64
                ],
                "bindings": [],
                "controls": [
                  {
                    "item_block@beacon.item_renderer": {
                      "size": [
                        32,
                        32
                      ],
                      "layer": 200,
                      "anchor_from": "top_middle",
                      "anchor_to": "top_middle",
                      "offset": [
                        0,
                        5
                      ],
                      "bindings": [
                        {
                          "binding_name": "#form_button_texture",
                          "binding_type": "collection",
                          "binding_collection_name": "form_buttons"
                        },
                        {
                          "binding_type": "view",
                          "source_property_name": "(not (('%.8s' * #form_button_texture) = 'textures'))",
                          "target_property_name": "#visible"
                        },
                        {
                          "binding_type": "view",
                          "source_property_name": "(not ((#texture = '') or (#texture = 'loading')))",
                          "target_property_name": "#visible"
                        },
                        {
                          "binding_type": "view",
                          "source_property_name": "#form_button_texture",
                          "target_property_name": "#texture"
                        }
                      ]
                    }
                  },
                  {
                    "non_renderer_item": {
                      "type": "image",
                      "size": [
                        32,
                        32
                      ],
                      "anchor_from": "top_middle",
                      "anchor_to": "top_middle",
                      "offset": [
                        0,
                        5
                      ],
                      "layer": 200,
                      "bindings": [
                        {
                          "binding_name": "#form_button_texture",
                          "binding_name_override": "#texture",
                          "binding_type": "collection",
                          "binding_collection_name": "form_buttons"
                        },
                        {
                          "binding_type": "view",
                          "source_property_name": "(not ((#texture = '') or (#texture = 'loading')))",
                          "target_property_name": "#visible"
                        },
                        {
                          "binding_type": "view",
                          "source_property_name": "(('%.8s' * #texture) = 'textures')",
                          "target_property_name": "#visible"
                        }
                      ]
                    }
                  },
                  {
                    "text": {
                      "type": "label",
                      "text": "#my_text",
                      "layer": 201,
                      "color": [
                        1,
                        1,
                        1
                      ],
                      "$fit_to_width": true,
                      "max_size": [
                        "80%",
                        "80%"
                      ],
                      "offset": [
                        0,
                        -5
                      ],
                      "anchor_from": "bottom_middle",
                      "anchor_to": "bottom_middle",
                      "text_alignment": "center",
                      "bindings": [
                        {
                          "binding_name": "#form_button_text",
                          "binding_type": "collection",
                          "binding_collection_name": "form_buttons"
                        },
                        {
                          "source_property_name": "#form_button_text",
                          "binding_type": "view",
                          "target_property_name": "#my_text"
                        }
                      ]
                    }
                  }
                ]
              }
            },
            {
              "form_button@common_buttons.light_text_button": {
                "$pressed_button_name": "button.form_button_click",
                "anchor_from": "top_left",
                "anchor_to": "top_left",
                "size": [
                  64,
                  64
                ],
                "$button_text": "#null",
                "$button_text_binding_type": "collection",
                "$button_text_grid_collection_name": "form_buttons",
                "$button_text_max_size": [
                  "100%",
                  20
                ],
                "bindings": [
                  {
                    "binding_type": "collection_details",
                    "binding_collection_name": "form_buttons"
                  }
                ]
              }
            }
          ]
        }
      }
    ],
    "bindings": [
      {
        "binding_name": "#form_button_text",
        "binding_type": "collection",
        "binding_collection_name": "form_buttons"
      },
      {
        "binding_type": "view",
        "source_property_name": "((#form_button_text - 'category' = #form_button_text))",
        "target_property_name": "#visible"
      }
    ]
  }
}